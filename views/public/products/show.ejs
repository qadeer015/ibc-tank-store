<!-- views/public/products/show.ejs -->
<div class="row mb-3">
    <div class="col-12">
        <h1 class="fw-bold text-center py-3 border-bottom">
            <%= product.name %>
        </h1>
    </div>
</div>

<div class="row mb-4">
    <!-- Product Image -->
    <div class="col-lg-5">
        <% if (productImages && productImages.length> 0) { %>
            <div class="position-relative text-center">
                <button class="gallery-nav prev" type="button">
                    <i class="bi bi-chevron-left"></i>
                </button>
        
                <!-- MAIN IMAGE (NOT an anchor) -->
                <img id="mainProductImage" src="<%= productImages[0] %>" class="img-fluid product-main-img" data-index="0"
                    alt="<%= product.name %>" />
        
                <button class="gallery-nav next" type="button">
                    <i class="bi bi-chevron-right"></i>
                </button>
        
            </div>
        
            <!-- THUMBNAILS -->
            <div class="d-flex justify-content-center gap-2 mt-3 flex-wrap">
                <% productImages.forEach((image, index)=> { %>
                    <img src="<%= image %>" class="product-thumb <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"
                        alt="Thumbnail" />
                <% }) %>
            </div>
        <% } else { %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <span class="text-muted">No image</span>
            </div>
        <% } %>
    </div>

    <!-- Product Info -->
    <div class="col-lg-7">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Rs <%= product.price %>
                </h4>

                <!-- Stock -->
                <p class="mb-2">
                    <span class="badge <%= product.stock > 0 ? 'bg-success' : 'bg-danger' %>">
                        <%= product.stock> 0 ? 'In Stock' : 'Out of Stock' %>
                    </span>
                </p>

                <p class="mb-3">
                    <strong>Condition: </strong>
                    <%= product.product_condition %>
                </p>

                <!-- Rating Display -->
                <div class="d-flex align-items-center mb-3">
                    <div class="me-2">
                        <% for(let i=1; i<=5; i++) { %>
                            <% if(i <=Math.floor(product.rating)) { %>
                                <i class="bi bi-star-fill text-warning"></i>
                                <% } else if(i===Math.ceil(product.rating) && product.rating % 1> 0) { %>
                                    <i class="bi bi-star-half text-warning"></i>
                                    <% } else { %>
                                        <i class="bi bi-star text-warning"></i>
                                        <% } %>
                                            <% } %>
                    </div>
                    <span class="text-muted">
                        <%= product.rating_count %>
                            <%= product.rating_count> 1 ? 'Ratings' : 'Rating' %>
                    </span>
                </div>

                <hr>

                <!-- Rating Form -->
                <% if (user) { %>
                    <form action="/ratings/<%= product.id %>/create" method="POST" class="mt-3">

                        <label class="fw-semibold mb-2 d-block">
                            Rate this product
                        </label>

                        <div class="rating-input mb-3">
                            <% for(let i=5; i>=1; i--) { %>
                                <input type="radio" name="rating" value="<%= i %>" id="star<%= i %>">
                                <label for="star<%= i %>">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                                <% } %>
                        </div>

                        <button class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Submit Rating
                        </button>

                    </form>
                    <% } else { %>
                        <p class="text-muted mt-3">
                            <i class="bi bi-lock me-1"></i>
                            Login to rate this product
                        </p>
                        <% } %>

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div id="tabs">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#description">Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#additional-info">Additional Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#reviews">Reviews</a>
            </li>
        </ul>
    </div>
</div>

<div class="row tab-pane py-3" id="description">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Description
                </h4>
                <p class="text-muted">
                    <%- product.description || 'No description available.' %>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row tab-pane py-3" id="additional-info" style="display: none;">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Additional Info
                </h4>
                <p class="text-muted">
                    <%= product.additional_info || 'No additional info available.' %>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row tab-pane py-3" id="reviews" style="display: none;">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Reviews
                </h4>
                <% if (ratings.length===0) { %>
                    <p class="text-muted">No reviews yet.</p>
                    <% } %>
                        <% for (let rating of ratings) { %>
                            <div class="card shadow-sm border-0 mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between w-100">
                                        <div class="d-flex">
                                            <img src="<%= rating.user_profile_photo || 'https://dummyimage.com/50x50/ced4da/6c757d.jpg' %>"
                                                class="rounded-circle me-2" width="50" height="50">
                                            <div class="d-flex flex-column">
                                                <h6 class="mb-0">
                                                    <%= rating.user_name %>
                                                </h6>
                                                <div class="mt-1">
                                                    <% for(let i=1; i<=5; i++) { %>
                                                        <% if(i <=Math.floor(rating.rating)) { %>
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                            <% } else if(i===Math.ceil(rating.rating) && rating.rating % 1> 0) { %>
                                                                <i class="bi bi-star-half text-warning"></i>
                                                                <% } else { %>
                                                                    <i class="bi bi-star text-warning"></i>
                                                                    <% } %>
                                                                        <% } %>
                                                </div>
                                                <%if(rating.comment) {%>
                                                    <p class="text-muted">
                                                        <%= rating.comment %>
                                                    </p>
                                                    <%}%>
                                            </div>
                                        </div>

                                        <div class="text-muted">
                                            <%= new Date(rating.created_at).toLocaleDateString() %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>
</div>
<script>
    /* Rating stars highlight */
    document.querySelectorAll('.rating-input input').forEach(input => {
        input.addEventListener('change', () => {
            document.querySelectorAll('.rating-input label')
                .forEach(l => l.classList.remove('active'));
            input.nextElementSibling.classList.add('active');
        });
    });

    /* Tabs */
    const tabs = document.querySelectorAll('.nav-tabs a');

    tabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            const targetTab = tab.getAttribute('href');
            document.querySelectorAll('.tab-pane')
                .forEach(p => p.style.display = 'none');

            document.querySelector(targetTab).style.display = 'block';
        });
    });
</script>