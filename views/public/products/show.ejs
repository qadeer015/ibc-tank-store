<div class="row mb-3">
    <div class="col-12">
        <h1 class="fw-bold text-center py-3 bg-primary text-white">
            <%= product.name %>
        </h1>
    </div>
</div>

<div class="row">
    <!-- Product Image -->
    <div class="col-lg-5">
        <% if (productImages && productImages.length> 0) { %>
            <div class="position-relative text-center">
                <button class="gallery-nav prev" type="button">
                    <i class="bi bi-chevron-left"></i>
                </button>

                <!-- MAIN IMAGE (NOT an anchor) -->
                <img id="mainProductImage" src="<%= productImages[0] %>" class="img-fluid product-main-img"
                    data-index="0" alt="<%= product.name %>" />

                <button class="gallery-nav next" type="button">
                    <i class="bi bi-chevron-right"></i>
                </button>

            </div>

            <!-- THUMBNAILS -->
            <div class="d-flex justify-content-center gap-2 mt-3 flex-wrap">
                <% productImages.forEach((image, index)=> { %>
                    <img src="<%= image %>" class="product-thumb <%= index === 0 ? 'active' : '' %>"
                        data-index="<%= index %>" alt="Thumbnail" />
                <% }) %>
            </div>
        <% } else { %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <span class="text-muted">No image</span>
            </div>
        <% } %>
    </div>

    <!-- Product Info -->
    <div class="col-lg-7">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <!-- Price -->
                <p class="mb-2 text-primary fw-semibold fs-4">
                    <%= settings.price_currency %><%= product.price %>
                </p>

                <!-- Stock -->
                <p class="mb-2">
                    <strong class="me-2">Stock : </strong>
                    <span>
                        <%= product.stock> 0 ? 'Stock Available' : 'Out of Stock' %>
                    </span>
                </p>

                <p class="mb-2">
                    <strong class="me-2">Condition : </strong>
                    <%= product.product_condition %>
                </p>

                <a href="https://wa.me/<%= settings.contact_number %>?text=<%= encodeURIComponent('Hi, I am interested in this product: ' + product.name) %>"
                    class="btn btn-sm btn-primary rounded-0 text-decoration-none fw-semibold my-3" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-whatsapp me-1"></i> Contact
                </a>

                <% if (product.specs && Object.keys(product.specs).length> 0) { %>
                    <h5 class="fw-semibold mb-3">
                        Specifications
                    </h5>
                    <div class="col-lg-6 col-md-8">
                    <% Object.entries(product.specs).forEach(([key, value])=> { %>
                        <div class="d-flex justify-content-between mb-2">
                            <strong class="fw-semibold">
                                <%= key %> 
                            </strong>
                            <span>
                                <%= value %>
                            </span>
                        </div>
                    <% }) %>
                    </div>
                <% } %>
                <!-- Rating Display -->
                <div class="d-flex align-items-center mb-3">
                    <div class="me-2">
                        <% for(let i=1; i<=5; i++) { %>
                            <% if(i <=Math.floor(product.rating)) { %>
                                <i class="bi bi-star-fill text-warning"></i>
                            <% } else if(i===Math.ceil(product.rating) && product.rating % 1> 0) { %>
                                <i class="bi bi-star-half text-warning"></i>
                            <% } else { %>
                                <i class="bi bi-star text-warning"></i>
                            <% } %>
                        <% } %>
                    </div>
                    <span class="text-muted">
                        <%= product.rating_count %>
                        <%= product.rating_count> 1 ? 'Ratings' : 'Rating' %>
                    </span>
                </div>

                <hr>

                <!-- Rating Form -->
                <% if (user) { %>
                    <form action="/ratings/<%= product.id %>/create" method="POST" class="mt-3">

                        <label class="fw-semibold mb-2 d-block">
                            Rate this product
                        </label>

                        <div class="rating-input mb-3">
                            <% for(let i=5; i>=1; i--) { %>
                                <input type="radio" name="rating" value="<%= i %>" id="star<%= i %>">
                                <label for="star<%= i %>">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                            <% } %>
                        </div>

                        <button class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Submit Rating
                        </button>

                    </form>
                    <% } else { %>
                        <p class="text-muted mt-3">
                            <i class="bi bi-lock me-1"></i>
                            Login to rate this product
                        </p>
                        <% } %>

            </div>
        </div>
    </div>
</div>


