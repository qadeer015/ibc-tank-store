<script>
    /* Rating stars highlight */
    document.querySelectorAll('.rating-input input').forEach(input => {
        input.addEventListener('change', () => {
            document.querySelectorAll('.rating-input label')
                .forEach(l => l.classList.remove('active'));
            input.nextElementSibling.classList.add('active');
        });
    });

    /* Tabs */
    const tabs = document.querySelectorAll('.nav-tabs a');

    tabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            const targetTab = tab.getAttribute('href');
            document.querySelectorAll('.tab-pane')
                .forEach(p => p.style.display = 'none');

            document.querySelector(targetTab).style.display = 'block';
        });
    });
</script>