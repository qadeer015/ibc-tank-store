<!-- views/public/products/search.ejs -->

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2>Search Results</h2>
            <% if (products.length === 0) { %>
                <div class="alert alert-info">No products found matching your criteria.</div>
            <% } else { %>
                <p class="text-muted"><%= products.length %> products found</p>
            <% } %>
        </div>
    </div>

    <div class="row">
        <!-- Search Filters Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Refine Search</h5>
                </div>
                <div class="card-body">
                    <form action="/search" method="GET">
                        <!-- Search Query -->
                        <div class="mb-3">
                            <label for="searchQuery" class="form-label">Search Term</label>
                            <input type="text" class="form-control" id="searchQuery" name="q" 
                                   value="<%= searchQuery || '' %>" placeholder="Enter keywords">
                        </div>

                        <!-- Category Filter -->
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select">
                                <option value="">All Categories</option>
                                <% categories.forEach(c => { %>
                                    <option value="<%= c.id %>" 
                                        <%= selectedCategory == c.id ? 'selected' : '' %>>
                                        <%= c.name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label">Price Range</label>
                            <div class="row g-2">
                                <div class="col">
                                    <input type="number" name="minPrice" class="form-control" 
                                           placeholder="Min" value="<%= minPrice || '' %>">
                                </div>
                                <div class="col">
                                    <input type="number" name="maxPrice" class="form-control" 
                                           placeholder="Max" value="<%= maxPrice || '' %>">
                                </div>
                            </div>
                        </div>

                        <!-- Condition Filter -->
                        <div class="mb-3">
                            <label class="form-label">Condition</label>
                            <select name="condition" class="form-select">
                                <option value="">Any Condition</option>
                                <option value="new" <%= condition === 'new' ? 'selected' : '' %>>New</option>
                                <option value="used" <%= condition === 'used' ? 'selected' : '' %>>Used</option>
                                <option value="refurbished" <%= condition === 'refurbished' ? 'selected' : '' %>>Refurbished</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        <div class="col-md-9">
            <% if (products.length > 0) { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% products.forEach(product => { %>
                        <div class="col">
                            <div class="card product-card h-100 overflow-hidden border-0 rounded-0">
                                <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                    <img src="<%= product.image %>" loading="lazy" class="card-img-top product-img" alt="<%= product.name %>">
                                </a>
                                <div class="card-body position-relative">
                                    <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                        <p class="card-title">
                                            <%= product.name %>
                                        </p>
                                    </a>
                                    <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                        <strong class="card-text">
                                            <%= settings.price_currency %>
                                                <%= product.price %>
                                        </strong>
                                    </a>
                                    <div class="pop-up-footer bg-primary p-2 text-center">
                                        <a href="https://wa.me/<%= settings.contact_number %>?text=<%= encodeURIComponent('Hi, I am interested in this product: ' + product.name) %>"
                                            class="whatsapp-btn text-white text-decoration-none fw-semibold" target="_blank"
                                            rel="noopener noreferrer">
                                            <i class="bi bi-whatsapp me-1"></i> Contact
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>