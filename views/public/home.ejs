<!-- views/public/home.ejs  -->

<!-- Hero Section with Search -->
<section class="hero-section my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Find Amazing IBC Tanks</h1>
            <p class="lead">Discover the best deals on quality items</p>
        </div>
        <div class="col-md-6">
            <form action="/search" method="GET" class="search-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control form-control-lg" placeholder="Search products..."
                        value="<%= searchQuery || '' %>">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Featured Products Slider -->
<section class="featured-products mb-5">
    <h2 class="section-title mb-4">Featured Products</h2>
    <div class="swiper featured-swiper">
        <div class="swiper-wrapper">
            <% featuredProducts.forEach(product=> { %>
                <div class="swiper-slide">
                    <div class="card product-card h-100 border-0">
                        <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>"
                                width="500px" height="500px">
                        </a>
                        <div class="card-body">
                            <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                <p class="card-title">
                                    <%= product.name %>
                                </p>
                            </a>
                            <div class="d-flex align-items-center justify-content-between">
                                <a href="/products/<%= product.id %>" class="text-decoration-none text-dark">
                                    <strong class="card-text fw-bold">
                                        <%= settings.price_currency %><%= product.price %>
                                    </strong>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</section>

<div class="row">
    <!-- Filters Sidebar -->
    <aside class="col-md-3">
        <div class="card filter-card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Filters</h5>
            </div>
            <div class="card-body">
                <form id="filterForm" action="/search" method="GET">
                    <!-- Search Query -->
                    <input type="hidden" name="q" value="<%= searchQuery %>">

                    <!-- Category Filter -->
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            <% categories.forEach(category=> { %>
                                <option value="<%= category.id %>" <%=selectedCategory==category.id ? 'selected' : '' %>
                                    >
                                    <%= category.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>

                    <!-- Price Range Filter -->
                    <div class="mb-3">
                        <label class="form-label">Price Range</label>
                        <div class="row g-2">
                            <div class="col">
                                <input type="number" name="minPrice" class="form-control" placeholder="Min"
                                    value="<%= minPrice %>">
                            </div>
                            <div class="col">
                                <input type="number" name="maxPrice" class="form-control" placeholder="Max"
                                    value="<%= maxPrice %>">
                            </div>
                        </div>
                    </div>

                    <!-- Condition Filter -->
                    <div class="mb-3">
                        <label class="form-label">Condition</label>
                        <select name="condition" class="form-select">
                            <option value="">Any Condition</option>
                            <option value="new" <%=condition==='new' ? 'selected' : '' %>>New</option>
                            <option value="used" <%=condition==='used' ? 'selected' : '' %>>Used</option>
                            <option value="refurbished" <%=condition==='refurbished' ? 'selected' : '' %>>Refurbished
                            </option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                </form>
            </div>
        </div>
    </aside>

    <!-- Latest Products Grid -->
    <section class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title mb-0">Latest Products</h2>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Sort By
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                    <li><a class="dropdown-item" href="?sort=latest">Newest First</a></li>
                    <li><a class="dropdown-item" href="?sort=price_asc">Price: Low to High</a></li>
                    <li><a class="dropdown-item" href="?sort=price_desc">Price: High to Low</a></li>
                    <li><a class="dropdown-item" href="?sort=rating">Top Rated</a></li>
                </ul>
            </div>
        </div>

        <% if (latestProducts.length> 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% latestProducts.forEach(product=> { %>
                    <div class="col">
                        <div class="card product-card h-100 overflow-hidden border-0 rounded-0">
                            <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                <img src="<%= product.image %>" loading="lazy" class="card-img-top product-img" alt="<%= product.name %>">
                            </a>
                            <div class="card-body position-relative">
                                <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                    <p class="card-title">
                                        <%= product.name %>
                                    </p>
                                </a>
                                <a class="text-decoration-none text-dark" href="/products/<%= product.id %>">
                                    <strong class="card-text">
                                        <%= settings.price_currency %><%= product.price %>
                                    </strong>
                                </a>
                                <div class="pop-up-footer bg-primary p-2 text-center">
                                    <a href="https://wa.me/<%= settings.contact_number %>?text=<%= encodeURIComponent('Hi, I am interested in this product: ' + product.name) %>"
                                        class="whatsapp-btn text-white text-decoration-none fw-semibold" target="_blank" rel="noopener noreferrer">
                                        <i class="bi bi-whatsapp me-1"></i> Contact
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">No products found. Try adjusting your filters.</div>
        <% } %>
    </section>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize Featured Products Swiper
        const featuredSwiper = new Swiper('.featured-swiper', {
            // Optional parameters
            loop: true,
            slidesPerView: 1, // Default for mobile
            spaceBetween: 20,
            centeredSlides: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },

            // If we need pagination
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },

            // Navigation arrows
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },

            // Responsive breakpoints
            breakpoints: {
                // when window width is >= 576px
                576: {
                    slidesPerView: 3,
                },
                // when window width is >= 768px
                768: {
                    slidesPerView: 3,
                },
                // when window width is >= 992px
                992: {
                    slidesPerView: 3,
                }
            }
        });
    });

    // Handle filter form submission
    document.getElementById('filterForm').addEventListener('submit', function (e) {
        // Remove empty fields before submission
        Array.from(this.elements).forEach(element => {
            if (element.name && !element.value) {
                element.disabled = true;
            }
        });
    });
</script>