<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="author" content="Abdul Qadeer, Zaheer Ahmed, Kafil Anwer">
    <meta name="description" content="IBC Tank Store's Admin Panel">
    <title>
        <%= title %> | IBC Tank Store
    </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/trix@2.0.8/dist/trix.css">
    <script type="text/javascript" src="https://unpkg.com/trix@2.0.8/dist/trix.umd.min.js"></script>
    <style>
        /* Sidebar base styles */
        #sidebar {
            transition: width 0.3s ease;
            max-height: 60vh;
            width: 240px;
            background: #f8f9fa;
            position: sticky;
            top: calc(64px + 1rem);
            /* below navbar with some spacing */
            border-radius: 0.25rem;
            overflow-y: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Shrinked sidebar (large screens) */
        #sidebar.shrink {
            width: 70px;
        }

        #sidebar .nav-link {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: clamp(0.9rem, 1.5vw, 1rem);
        }

        #sidebar.shrink .nav-link span {
            display: none;
            /* hide text when shrinked */
        }

        #sidebar .nav-link i {
            font-size: 1.2rem;
        }

        /* Mobile offcanvas */
        @media (max-width: 991.98px) {
            #sidebar {
                position: fixed;
                top: calc(64px + 1rem);
                /* below navbar */
                left: -240px;
                z-index: 1045;
            }

            #sidebar.show {
                left: 0;
            }
        }

        /* Sidebar toggle button */
        .sidebar-toggle {
            border: none;
            background: transparent;
            font-size: 1.5rem;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('../admin/partials/_header') %>
        <div class="container-fluid">
            <div class="d-lg-flex">
                <!-- Sidebar -->
                <%- include('../admin/partials/_sidebar') %>
                <!-- Main content -->
                <div id="mainContent" class="flex-grow-1 pe-0">
                    <%- include('../shared/_alerts') %>
                    <main class="p-4 min-vh-100">
                        <%- include('../admin/partials/_breadcrumb') %>
                        <%- body %>
                    </main>
                </div>
            </div>
        </div>
    </div>

    <%- include('../admin/partials/_footer') %>

    <script>
        const sidebar = document.getElementById("sidebar");
        const linkElements = sidebar?.querySelectorAll(".nav-link");
        const mobileSidebarToggle = document.getElementById("mobileSidebarToggle");
        const desktopSidebarToggle = document.getElementById("desktopSidebarToggle");
        const sidebarTitle = document.getElementById("sidebarTitle");
        // Mobile toggle
        mobileSidebarToggle?.addEventListener("click", () => {
            sidebar.classList.toggle("show");
        });
        // Desktop toggle
        desktopSidebarToggle?.addEventListener("click", () => {
            sidebar.classList.toggle("shrink");
            linkElements.forEach(link => {
                link.classList.toggle("text-center");
            });
            sidebarTitle.classList.toggle("d-none");
        });
        const clickableRows = document.querySelectorAll(".click-able");
        if (clickableRows) {
            clickableRows.forEach(row => {
                row.addEventListener("click", () => {
                    const resourceBaseUrl = row.getAttribute("data-of");
                    const resourceId = row.getAttribute("data-id");
                    window.location.href = `/admin/${resourceBaseUrl}/${resourceId}`;
                });
            });
        }
    </script>
    <script src="/js/notification.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
</body>

</html>