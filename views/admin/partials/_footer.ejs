<script>
    const sidebar = document.getElementById("sidebar");
    const linkElements = sidebar?.querySelectorAll(".nav-link");
    const mobileSidebarToggle = document.getElementById("mobileSidebarToggle");
    const desktopSidebarToggle = document.getElementById("desktopSidebarToggle");
    const sidebarTitle = document.getElementById("sidebarTitle");

    // Mobile toggle
    mobileSidebarToggle?.addEventListener("click", () => {
        sidebar.classList.toggle("show");
    });

    // Desktop toggle
    desktopSidebarToggle?.addEventListener("click", () => {
        sidebar.classList.toggle("shrink");
        linkElements.forEach(link => {
            link.classList.toggle("text-center");
        });
        sidebarTitle.classList.toggle("d-none");
    });

    const clickableRows = document.querySelectorAll(".click-able");
    if(clickableRows){
        clickableRows.forEach(row => {
            row.addEventListener("click", () => {
                const resourceBaseUrl = row.getAttribute("data-of");
                const resourceId = row.getAttribute("data-id");
                window.location.href = `/admin/${resourceBaseUrl}/${resourceId}`;
            });
        });
    }
</script>


