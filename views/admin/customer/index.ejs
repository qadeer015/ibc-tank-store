<!-- views/admin/customer/index.ejs -->
<% if(customers.length> 0) { %>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Simple DataTables Table -->
                    <div class="table-responsive">
                        <table class="table datatable" id="customersTable">
                            <thead>
                                <tr>
                                    <th data-sortable="true">Name</th>
                                    <th data-sortable="true">Email</th>
                                    <th data-sortable="true" class="text-center">Date</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% customers.forEach(customer=> { %>
                                    <tr>
                                        <td class="click-able" data-of="customers" data-id="<%= customer.id %>">
                                            <%= customer.name %>
                                        </td>
                                        <td class="click-able" data-of="customers" data-id="<%= customer.id %>">
                                            <%= customer.email %>
                                        </td>
                                        <td class="click-able text-center" data-of="customers"
                                            data-id="<%= customer.id %>">
                                            <%= new Date(customer.created_at).toLocaleDateString() %>
                                        </td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary rounded-circle"
                                                    type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item"
                                                            href="/admin/customers/<%= customer.id %>">
                                                            <i class="bi bi-eye me-2 text-info"></i>
                                                            View
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <form action="/admin/customers/<%= customer.id %>/delete"
                                                            method="POST"
                                                            onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                                            <button type="submit" class="dropdown-item text-danger">
                                                                <i class="bi bi-trash me-2"></i>
                                                                Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- End Simple DataTables Table -->
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <div class="row justify-content-center mt-3">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-sm border-0 text-center p-4 fade-in">
                    <div class="card-body">
                        <i class="bi bi-people display-4 text-muted mb-3"></i>
                        <h5 class="card-title fw-bold">No Customers Found</h5>
                        <p class="card-text text-muted">There are no customers to display at the moment.</p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>