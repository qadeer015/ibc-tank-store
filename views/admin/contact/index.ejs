<!-- views/admin/contact/index.ejs -->
<% if(contacts.length> 0) { %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table datatable" id="contactsTable">
              <thead>
                <tr>
                  <th data-sortable="true">Name</th>
                  <th data-sortable="true">Email</th>
                  <th data-sortable="true">Contact Number</th>
                  <th data-sortable="true" class="text-center">Date</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% contacts.forEach(contact=> {
                  // Determine status class
                  let statusClass = 'secondary';
                  let statusText = 'New';

                  if (contact.status === 'read') {
                  statusClass = 'success';
                  statusText = 'Read';
                  } else if (contact.status === 'replied') {
                  statusClass = 'info';
                  statusText = 'Replied';
                  } else if (contact.status === 'pending') {
                  statusClass = 'warning';
                  statusText = 'Pending';
                  }
                  %>
                  <tr class="<%= contact.status === 'new' ? 'table-primary' : '' %>">
                    <td class="click-able" data-of="contacts" data-id="<%= contact.id %>"
                      onclick="markAsRead(<%= contact.id %>)">
                      <%= contact.name %>
                        <% if (contact.status==='new' ) { %>
                          <span class="badge bg-danger ms-1">New</span>
                          <% } %>
                    </td>
                    <td class="click-able" data-of="contacts" data-id="<%= contact.id %>"
                      onclick="markAsRead(<%= contact.id %>)">
                      <a href="mailto:<%= contact.email %>" class="text-decoration-none">
                        <%= contact.email %>
                      </a>
                    </td>
                    <td class="click-able" data-of="contacts" data-id="<%= contact.id %>"
                      onclick="markAsRead(<%= contact.id %>)">
                      <% if (contact.contact_no) { %>
                        <a href="tel:<%= contact.contact_no %>" class="text-decoration-none">
                          <%= contact.contact_no %>
                        </a>
                        <% } else { %>
                          <span class="text-muted">Not provided</span>
                          <% } %>
                    </td>
                    <td class="click-able text-center" data-of="contacts" data-id="<%= contact.id %>"
                      onclick="markAsRead(<%= contact.id %>)">
                      <span class="badge bg-light text-dark">
                        <%= new Date(contact.created_at).toLocaleDateString() %>
                      </span>
                    </td>
                    <td class="text-center">
                      <div class="dropdown">
                        <button class="btn btn-sm btn-outline-primary rounded-circle" type="button"
                          data-bs-toggle="dropdown" aria-expanded="false">
                          <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                          <li>
                            <a class="dropdown-item fw-semibold" href="/admin/contacts/<%= contact.id %>">
                              <i class="bi bi-eye me-2 text-info"></i>
                              View
                            </a>
                          </li>
                          <li>
                            <a class="dropdown-item fw-semibold"
                              href="/admin/contacts/<%= contact.id %>/reply">
                              <i class="bi bi-envelope me-2 text-success"></i>
                              Reply
                            </a>
                          </li>
                          <li>
                            <a class="dropdown-item fw-semibold" href="tel:<%= contact.contact_no %>">
                              <i class="bi bi-telephone me-2 text-warning"></i>
                              Call
                            </a>
                          </li>
                          <li>
                            <hr class="dropdown-divider">
                          </li>
                          <li>
                            <form action="/admin/contacts/<%= contact.id %>/delete" method="POST"
                              onsubmit="return confirm('Are you sure you want to delete this message?');">
                              <button type="submit" class="dropdown-item text-danger">
                                <i class="bi bi-trash me-2"></i>
                                Delete
                              </button>
                            </form>
                          </li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } else { %>
    <div class="row justify-content-center mt-3">
      <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm border-0 text-center p-4 fade-in">
          <div class="card-body">
            <i class="bi bi-envelope display-4 text-muted mb-3"></i>
            <h5 class="card-title fw-bold">No Contact Messages</h5>
            <p class="card-text text-muted">There are no contact messages to display at the moment.</p>
          </div>
        </div>
      </div>
    </div>
  <% } %>
<script>
  function markAsRead(contactId) {
    if (event && event.target.closest('.dropdown-item')) return; // Don't proceed if clicking dropdown menu
    fetch(`/admin/contacts/${contactId}/mark-read`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          console.log('Contact marked as read');
        }
      })
      .catch(error => console.error('Error:', error));
  }
</script>