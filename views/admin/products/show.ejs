<div class="row tab-pane py-3" id="description">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Description
                </h4>
                <p class="text-muted">
                    <%- product.description || 'No description available.' %>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row tab-pane py-3" id="additional-info" style="display: none;">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Additional Information
                </h4>
                <% if (product.additional_info && Object.keys(product.additional_info).length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <tbody>
                                <% Object.entries(product.additional_info).forEach(([key, value])=> { %>
                                    <tr>
                                        <td class="fw-semibold" style="width: 30%;">
                                            <%= key %>
                                        </td>
                                        <td>
                                            <%= value %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">No additional information available.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="row tab-pane py-3" id="specs" style="display: none;">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Product Specifications
                </h4>
                <% if (product.specs && Object.keys(product.specs).length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <tbody>
                                <% Object.entries(product.specs).forEach(([key, value])=> { %>
                                    <tr>
                                        <td class="fw-semibold" style="width: 30%;">
                                            <%= key %>
                                        </td>
                                        <td>
                                            <%= value %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="text-muted">No specifications available.</p>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<div class="row tab-pane py-3" id="reviews" style="display: none;">
    <div class="col-lg-12">
        <div class="card bg-transparent border-0">
            <div class="card-body">
                <h4 class="text-primary fw-semibold mb-3">
                    Reviews
                </h4>
                <% if (ratings.length===0) { %>
                    <p class="text-muted">No reviews yet.</p>
                    <% } %>
                        <% for (let rating of ratings) { %>
                            <div class="card shadow-sm border-0 mb-3">
