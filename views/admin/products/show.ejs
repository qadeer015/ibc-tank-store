                                            <img src="<%= rating.user_profile_photo || 'https://dummyimage.com/50x50/ced4da/6c757d.jpg' %>"
                                                class="rounded-circle me-2" width="50" height="50">
                                            <div class="d-flex flex-column">
                                                <h6 class="mb-0">
                                                    <%= rating.user_name %>
                                                </h6>
                                                <div class="mt-1">
