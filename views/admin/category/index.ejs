<!-- views/admin/category/index.ejs -->
<div class="row">
    <div class="col-12 text-end">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newCategoryModal">
            <i class="bi bi-plus-lg me-1"></i> New Category
        </button>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Simple DataTables Table for Categories -->
                <div class="table-responsive">
                    <table class="table datatable" id="categoriesTable">
                        <thead>
                            <tr>
                                <th data-sortable="true">Name</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category=> { %>
                                <tr id="category-<%= category.id %>">
                                    <td>
                                        <strong>
                                            <%= category.name %>
                                        </strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <!-- Quick Edit Button -->
                                            <button type="button"
                                                class="btn btn-sm btn-outline-primary edit-category-btn"
                                                data-id="<%= category.id %>" data-name="<%= category.name %>"
                                                data-bs-toggle="modal" data-bs-target="#editCategoryModal">
                                                <i class="bi bi-pencil"></i>
                                            </button>

                                            <!-- Delete Button -->
                                            <button type="button"
                                                class="btn btn-sm btn-outline-danger delete-category-btn"
                                                data-id="<%= category.id %>" data-name="<%= category.name %>">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <!-- End Simple DataTables Table -->
            </div>
        </div>
    </div>
</div>

<!-- New Category Modal -->
<div class="modal fade" id="newCategoryModal" tabindex="-1" aria-labelledby="newCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newCategoryModalLabel">Create New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/categories/create" method="POST" id="newCategoryForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="newCategoryName" name="name"
                            placeholder="Enter category name" required>
                        <div class="form-text">Category names must be unique.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i> Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editCategoryForm" method="POST">
                <div class="modal-body">
                    <input type="hidden" id="editCategoryId" name="id">
                    <div class="mb-3">
                        <label for="editCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="editCategoryName" name="name" required>
                        <div class="form-text">Updating the category name will affect all associated products.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> Update Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Initialize Simple DataTables and Category Management -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize Simple DataTables
        let dataTable = null;

        // Handle Edit Category Button Click
        document.querySelectorAll('.edit-category-btn').forEach(button => {
            button.addEventListener('click', function () {
                const categoryId = this.getAttribute('data-id');
                const categoryName = this.getAttribute('data-name');

                document.getElementById('editCategoryId').value = categoryId;
                document.getElementById('editCategoryName').value = categoryName;

                // Update form action
                document.getElementById('editCategoryForm').action = `/admin/categories/${categoryId}/update`;
            });
        });

        // Handle Edit Form Submission
        document.getElementById('editCategoryForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const categoryId = document.getElementById('editCategoryId').value;
            const categoryName = document.getElementById('editCategoryName').value.trim();

            if (!categoryName) {
                new Notification('Category name cannot be empty', 'danger');
                return;
            }

            // Send update request
            fetch(`/admin/categories/${categoryId}/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name: categoryName
                })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('editCategoryModal'));
                        modal.hide();

                        // Update table row
                        const row = document.getElementById(`category-${categoryId}`);
                        if (row) {
                            const nameCell = row.querySelector('td:nth-child(2) strong');
                            const editButton = row.querySelector('.edit-category-btn');

                            if (nameCell) nameCell.textContent = categoryName;
                            if (editButton) editButton.setAttribute('data-name', categoryName);
                        }

                        new Notification('Category updated successfully!', 'success');
                    } else {
                        new Notification(data.error || 'Failed to update category', 'danger');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    new Notification('An error occurred. Please try again.', 'danger');
                });
        });

        // Handle Delete Category Button Click
        document.querySelectorAll('.delete-category-btn').forEach(button => {
            button.addEventListener('click', function () {
                const categoryId = this.getAttribute('data-id');
                const categoryName = this.getAttribute('data-name');

                if (confirm(`Are you sure you want to delete the category "${categoryName}"?\n\nThis action cannot be undone.`)) {
                    // Create and submit delete form
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/admin/categories/${categoryId}/delete`;

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });

        // Handle New Category Form Submission
        document.getElementById('newCategoryForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const categoryName = formData.get('name').trim();

            if (!categoryName) {
                new Notification('Category name cannot be empty', 'danger');
                return;
            }

            // Submit form
            fetch('/admin/categories/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name: categoryName
                })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('newCategoryModal'));
                        modal.hide();

                        // Clear form
                        document.getElementById('newCategoryName').value = '';

                        // Refresh page to show new category
                        window.location.reload();
                    } else {
                        new Notification(data.error || 'Failed to create category', 'danger');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    new Notification('An error occurred. Please try again.', 'danger');
                });
        });

        // Auto-dismiss modal alerts
        const modals = ['newCategoryModal', 'editCategoryModal'];
        modals.forEach(modalId => {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.addEventListener('hidden.bs.modal', function () {
                    const alerts = this.querySelectorAll('.alert');
                    alerts.forEach(alert => alert.remove());
                });
            }
        });
    });
</script>