{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public/admin/vendors/src",
        "public/admin/vendors/**/*.ts"
    ]
}
